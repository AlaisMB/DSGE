close all

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%		The business cycle, J.-O. Hairault, F. Portier 	%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%



%**********************
% Calibration and steady state
%**********************

% Technology stochastic process 

rho_an_us=0.95;
rho_an_fr=0.98;

rho_ap_us=0.95;
rho_ap_fr=0.99;

epsilon_an_us = 0.009; 
epsilon_an_fr = 0.009; 


epsilon_ap_us = 0.008; 
epsilon_ap_fr = 0.0058; 


% Money supply stochastic process

g_barre_us =1.014; 
g_barre_fr =1.028; 

rho_g_us =0.377;
rho_g_fr =0.50; 

epsilon_g_us =0.009; 
epsilon_g_fr =0.0098; 


% Production function

H_us =0.2;
H_fr = 0.2;

alpha_us =0.3;
alpha_fr =0.335;

delta_us =0.025;
delta_fr =0.0125;



% Utility Function 

a_us = - 1/3; 
a_fr = - 1/3; 

sigma_us = 1/9; 
sigma_fr = 1/9; 

gamma_us =0.197;
gamma_fr =0.225; 

MPY_us =0.1; 
MPY_fr =0.25; 

% Real Adjustment Cost 

phi_us = 1;
phi_fr = 1;

MC_us =0.01; 
MC_fr =0.007;


% Steady-State Ratio

beta_us =0.988; 
beta_fr =0.988; 

% // With arbitrary values for A and P 

A_barre = 0.2;
P = 0.3; 

z = (1/beta_fr) - 1 + delta_fr ; 

ksy = (alpha_fr / 1 + gamma_fr) * (1/z) ; 
csy = 1 - delta_fr * ksy  ; 
ysh = (A_barre)^(1/1-sigma_fr) * ksy^(alpha_fr/1-alpha_fr) * H_fr ;

y = ysh * H_fr ;
c = y - delta_fr * ksy * y ;
k = ksy * y ; 

w = (1-alpha_fr/ 1+gamma_fr)* ysh ;
gamma_2 = - (1- g_barre_fr * (1+z - delta_fr)) * (MPY_fr * (1/csy))^(1/sigma_fr) ;


vsp = gamma_fr / (1 + gamma_fr) ; 
v = vsp * P ;

MP = MPY_fr * y ;

disp(' ');
param1=[alpha_fr beta_fr delta_fr H_fr rho_ap_fr rho_g_fr gamma_fr sigma_fr];
param2=[y     c     k     w   v   z   MP ];
disp('alpha   beta  delta  H   rho_a  rhog   gamma   sigma'); 
disp(' ');
disp(param1);
disp(' ');
disp('    y     		c   	 k  		  w 	 v  	z			MP ');
disp(param2);



%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%		   	Linearized Model in Matrix Form 				  %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%


M1=zeros(7,7); 
M2=zeros(7,5);
M3=zeros(7,2);


M4 = zeros(5,5); 
M5 = zeros(5,7); 
M6 = zeros(2,1); 




